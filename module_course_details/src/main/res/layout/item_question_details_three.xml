<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <com.zspt.app.library_common.widget.CircleImageView
        android:id="@+id/item_question_details_three_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_question_details_three_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_question_details_three_image"
        android:text="name"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_question_details_three_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_question_details_three_image"
        android:layout_marginTop="10dp"
        android:text="content"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

</RelativeLayout>
