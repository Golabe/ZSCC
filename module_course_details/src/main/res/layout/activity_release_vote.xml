<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zspt.app.modulecouresdetails.course_watch.view.activity.ReleaseVoteActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/release_vote_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/elevation_normal">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/release_vote_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_vote_edit"
                android:hint="投票标题20字以内"
                android:maxLength="20"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/release_vote_content"
                android:gravity="left|top"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_vote_edit"
                android:hint="请输入250字以内描述"
                android:maxLength="250"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="选项1" />

            <EditText
                android:id="@+id/release_vote_option1"
                android:padding="10dp"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="添加14字以内文字"
                android:maxLength="14"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="选项2" />

            <EditText
                android:id="@+id/release_vote_option2"
                android:padding="10dp"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="添加14字以内文字"
                android:maxLength="14"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="选项3" />

            <EditText
                android:id="@+id/release_vote_option3"
                android:padding="10dp"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="添加14字以内文字"
                android:maxLength="14"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="选项4" />

            <EditText
                android:id="@+id/release_vote_option4"
                android:padding="10dp"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="添加14字以内文字"
                android:maxLength="14"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:text="投票截止日期:"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="2017/10/11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/release_vote_release"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="发布"
                android:layout_marginTop="20dp"
                android:background="#1f95e4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
