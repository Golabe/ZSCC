<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <com.zspt.app.library_common.widget.CircleImageView
        android:id="@+id/item_vote_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/item_vote_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_vote_image"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_vote_image"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/item_question_image"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/item_vote_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_vote_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:textSize="12sp" />
    </RelativeLayout>


</RelativeLayout>
