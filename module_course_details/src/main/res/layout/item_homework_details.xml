<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_homework_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1、java"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        android:textStyle="bold" />
    <RadioGroup
        android:id="@+id/item_homework_details_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/item_homework_details_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A：" />

        <RadioButton
            android:id="@+id/item_homework_details_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B：" />

        <RadioButton
            android:id="@+id/item_homework_details_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C：" />

        <RadioButton
            android:id="@+id/item_homework_details_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D：" />

    </RadioGroup>

</LinearLayout>
