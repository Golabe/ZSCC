<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zspt.app.modulecouresdetails">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.AppTheme">
        <activity
            android:name=".course_details.CourseDetailsActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".course_watch.view.activity.WatchActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".course_watch.view.activity.QuestionActivity" />
        <activity android:name=".course_watch.view.activity.QuestionDetailsActivity" />
        <activity
            android:name=".course_watch.view.activity.AnswerActivity"
            android:windowSoftInputMode="stateVisible|adjustResize"></activity>
        <activity android:name=".course_watch.view.activity.ReleaseCommentActivity" />
        <activity android:name=".course_watch.view.activity.VoteActivity"/>
        <activity android:name=".course_watch.view.activity.VoteDetailsActivity"/>
        <activity android:name=".course_watch.view.activity.ReleaseVoteActivity"/>

        <activity android:name=".course_watch.view.activity.HomeworkActivity"/>
        <activity android:name=".course_watch.view.activity.HomeworkDetailsActivity"/>
    </application>

</manifest>